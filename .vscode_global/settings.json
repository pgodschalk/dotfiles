{
	// This is shared manually, rather than symlinked, since some extensions
	// store secrets in `settings.json`. It's updated when I remember to. :)
	"editor.fontSize": 16,
	"editor.fontFamily": "'FiraCode Nerd Font', 'FiraCode NF', 'ui-monospace', 'SFMono-Regular', 'Menlo', 'Monaco', 'Consolas', 'Liberation Mono', 'Courier New', 'monospace', 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji'",
	"editor.tabSize": 2,
	"editor.codeLensFontFamily": "'ui-sans-serif', 'system-ui', '-apple-system', 'BlinkMacSystemFont', 'Segoe UI', 'Roboto', 'Helvetica Neue', 'Arial', 'Noto Sans', 'sans-serif', 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji",
	"editor.linkedEditing": true,
	"editor.rulers": [80],
	"editor.cursorBlinking": "phase",
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.fontLigatures": "on",
	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,
	"editor.formatOnType": true,
	"diffEditor.codeLens": true,
	"files.hotExit": "off",
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	"workbench.list.smoothScrolling": true,
	"workbench.startupEditor": "newUntitledFile",
	"workbench.colorCustomizations": {
		"editorHint.foreground": "#00000000",
		"editorHint.border": "#2aa198"
	},
	"workbench.colorTheme": "Solarized Light",
	"workbench.preferredDarkColorTheme": "Solarized Dark",
	"workbench.preferredLightColorTheme": "Solarized Light",
	"workbench.sideBar.location": "right",
	"breadcrumbs.enabled": false,
	"window.autoDetectColorScheme": true,
	"window.closeWhenEmpty": true,
	"window.restoreFullscreen": true,
	"window.restoreWindows": "none",
	"window.newWindowDimensions": "inherit",
	"explorer.incrementalNaming": "smart",
	"explorer.openEditors.visible": 1,
	"search.showLineNumbers": true,
	"search.smartCase": true,
	"scm.diffDecorationsIgnoreTrimWhitespace": "true",
	"terminal.external.osxExec": "/Applications/Ghostty.app",
	"terminal.external.windowsExec": "%LocalAppData%\\Microsoft\\WindowsApps\\wt.exe",
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.cursorStyle": "line",
	"terminal.integrated.cursorWidth": 2,
	"terminal.integrated.defaultProfile.linux": "zsh",
	"terminal.integrated.defaultProfile.osx": "zsh",
	"terminal.integrated.fontSize": 16,
	"problems.autoReveal": false,
	"telemetry.telemetryLevel": "off",
	"codeQL.telemetry.logTelemetry": false,
	"github.copilot.enable": {
		"*": true,
		"plaintext": true,
		"markdown": true,
		"scminput": true
	},
	"git.autofetch": true,
	"git.confirmSync": false,
	"git.inputValidationLength": 50,
	"github.gitProtocol": "ssh",
	"html.format.indentInnerHtml": true,
	"json.schemaDownload.enable": true,
	"markdown.preview.fontFamily": "'ui-sans-serif', 'system-ui', '-apple-system', 'BlinkMacSystemFont', 'Segoe UI', 'Roboto', 'Helvetica Neue', 'Arial', 'Noto Sans', 'sans-serif', 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji",
	"remote.tunnels.alwaysUpdateCLI": true,
	"remote.defaultExtensionsIfInstalledLocally": [
		"GitHub.copilot",
		"GitHub.copilot-chat",
		"GitHub.vscode-pull-request-github"
	],
	"biome.suggestInstallingGlobally": false
}
